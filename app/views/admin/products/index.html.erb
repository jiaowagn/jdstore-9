<h2>Product List</h2>

<%= link_to("Add a Product", new_admin_product_path, class: "btn btn-default pull-right") %>
<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">商品资讯</th>
      <th>数量</th>
      <th>单价</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
